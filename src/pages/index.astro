---
import '../styles/global.css';
import '../styles/mobileSidebar.css';
import '../styles/hero.css';
import '../styles/about.css';
import '../styles/projects.css';
import '../styles/skills.css';
import '../styles/contact.css';
import Sidebar from '../components/Sidebar.jsx';
import MobileSidebar from '../components/MobileSidebar.jsx';
import Hero from '../components/Hero.jsx';
import About from '../components/About.jsx';
import Projects from '../components/Projects.jsx';
import Skills from '../components/Skills.jsx';
import Contact from '../components/Contact.jsx';



// List of sections to pass to Sidebar components
const sections = ['me', 'about', 'projects', 'skills', 'contact'];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Interactive Portfolio</title>
  </head>
  <body>
    <!-- Sidebar Components -->
    
    <div class="desktop-sidebar">
      <Sidebar client:load sections={sections} />
    </div>
    <div class="mobile-sidebar">
      <MobileSidebar client:load />
    </div>
    <!-- Main Content -->
    <main>
      <Hero id="me" client:load />
      <About id="about" client:load />
      <Projects id="projects" client:load />
      <Skills id="skills" client:load />
      <Contact id="contact" client:load />
    </main>
  </body>
</html>
